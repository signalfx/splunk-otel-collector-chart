    "fluentd": {
      "description": "Fluentd sidecar configuration for logs collection.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "resources": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "limits": {
              "type": "object",
              "additionalProperties": false,
