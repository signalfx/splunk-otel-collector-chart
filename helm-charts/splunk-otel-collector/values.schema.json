        "securityContext": {
          "type": "object"
        },
        "extraEnvs": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "config": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "containers": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "path": {
                  "type": "string"
                },
                "pathDest": {
                  "type": "string"
                },
                "logFormatType": {
                  "type": "string"
                },
                "criTimeFormat": {
                  "type": "string"
                }
              }
            },
            "journalLogPath": {
              "type": "string"
            },
            "buffer": {
              "type": "object"
            },
            "logLevel": {
              "type": "string",
              "enum": [
                "trace",
                "debug",
                "info",
                "warn",
                "error"
              ]
            },
            "path": {
              "type": "string"
            },
            "excludePath": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "posFilePrefix": {
              "type": "string"
            },
            "customFilters": {
              "type": "object",
              "patternProperties": {
                ".*": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "tag": {
                      "type": "string"
                    },
