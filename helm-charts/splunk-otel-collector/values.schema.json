            "extraOperators": {
              "type": "array",
              "items": {
                "type": "object"
              }
            },
            "useSplunkIncludeAnnotation": {
              "type": "boolean"
            },
            "multilineConfigs": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        },
        "journald": {
          "description": "Configuration to collect journald logs",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "directory": {
              "type": "string"
            },
            "index": {
              "type": "string"
            },
            "units": {
              "type": "array",
              "items": {
                "type": "object",
